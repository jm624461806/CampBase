<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST" novalidate class='validated-form' enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campgrounds.title %>" required>
                    <!–– the name can form a structure and then destructure using Java script ––>
                    <div class="valid-feedback">
                        Gucci!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campgrounds.location%>" required>
                    <div class="valid-feedback">
                        Gucci!
                      </div>
                </div>
              
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campgrounds.price%>" required>
                        <div class="valid-feedback">
                            Gucci!
                        </div>
                    </div>
                </div>
      
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campgrounds.description%></textarea>
                    <div class="valid-feedback">
                        Gucci!
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                  </div>

                  <div class="mb-3">
                    <% campgrounds.images.forEach(function(img, i) {  %>
    
                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% })%>
                </div>
                
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
            </form>
            <div class ="mb-3">
            <a href="/campgrounds/<%= campgrounds._id%>" class="text-dark"><b>Cancel Editing</b></a>
            </div>
            <a href="/campgrounds" class="text-dark"><b>To All Campgrounds</b></a>
        </div>
      </div>